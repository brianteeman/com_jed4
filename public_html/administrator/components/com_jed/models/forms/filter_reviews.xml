<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">

        <field
                name="search"
                type="text"
                hint=""
                label=""
                class="js-stools-search-string"
        />

        <field
                name="published"
                type="list"
                label="JPUBLISHED"
                default=""
                size="1"
                onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field
                name="reviewer"
                type="jed.reviewers"
                label="JAUTHOR"
                default=""
                size="1"
                onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_AUTHOR</option>
        </field>

        <field
                name="extension"
                type="jed.extensions"
                label="COM_JED_EXTENSION"
                default=""
                size="1"
                onchange="this.form.submit();"
        >
            <option value="">COM_JED_FILTER_EXTENSION</option>
        </field>

        <field
                name="developer"
                type="jed.developers"
                label="COM_JED_EXTENSIONS_DEVELOPER"
                default=""
                size="1"
                onchange="this.form.submit();"
        >
            <option value="">COM_JED_FILTER_DEVELOPER</option>
        </field>

        <field
                name="ipaddress"
                type="jed.ipaddresses"
                label="COM_JED_REVIEWS_IP_ADDRESS"
                default=""
                size="1"
                onchange="this.form.submit();"
        >
            <option value="">COM_JED_FILTER_IP_ADDRESS</option>
        </field>

        <field
                name="flagged"
                type="list"
                label="COM_JED_REVIEWS_FLAGGED"
                default=""
                size="1"
                onchange="this.form.submit();"
        >
            <option value="">COM_JED_FILTER_FLAGGED</option>
            <option value="1">COM_JED_REVIEWS_FLAGGED</option>
            <option value="0">COM_JED_REVIEWS_NOT_FLAGGED</option>
        </field>

    </fields>

    <fields name="list">

        <field
                name="fullordering"
                type="list"
                label="COM_CONTENT_LIST_FULL_ORDERING"
                description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="reviews.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="reviews.`id` ASC">ID Ascending</option>
            <option value="reviews.`id` DESC">ID Descending</option>
            <option value="reviews.`published` ASC">State Ascending</option>
            <option value="reviews.`published` DESC">State Descending</option>
            <option value="reviews.`title` ASC">Title Ascending</option>
            <option value="reviews.`title` DESC">Title Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>
