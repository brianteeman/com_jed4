<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">

        <field
                name="search"
                type="text"
                hint=""
                label=""
                class="js-stools-search-string"
        />

        <field
                name="category"
                type="category"
                class="advancedSelect"
                extension="com_jed"
                default=""
                filter="integer"
                multiple="true"
        />

        <field
                name="published"
                type="list"
                label="JPUBLISHED"
                class="advancedSelect"
                default=""
                size="1"
                onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field
                name="approved"
                type="list"
                label="COM_JED_APPROVED_LABEL"
                class="advancedSelect"
				default=""
                onchange="this.form.submit();"
        >
            <option value="">COM_JED_EXTENSIONS_APPROVED_SELECT</option>
            <option value="-1">COM_JED_EXTENSIONS_REJECTED</option>
            <option value="0">COM_JED_EXTENSIONS_PENDING</option>
            <option value="1">COM_JED_EXTENSIONS_APPROVED</option>
            <option value="2">COM_JED_EXTENSIONS_AWAITING_RESPONSE</option>
        </field>

        <field
            name="developer"
            type="jed.developers"
            class="advancedSelect"
            />

        <field
                name="type"
                type="list"
                label="COM_JED_EXTENSIONS_TYPE"
                class="advancedSelect"
                size="1"
                default=""
                onchange="this.form.submit();"
        >
            <option value="">COM_JED_EXTENSIONS_TYPE_SELECT</option>
            <option value="free">COM_JED_EXTENSIONS_TYPE_FREE</option>
            <option value="paid">COM_JED_EXTENSIONS_TYPE_PAID</option>
            <option value="cloud">COM_JED_EXTENSIONS_TYPE_CLOUD</option>
        </field>

        <field
                name="includes"
                type="list"
                label="COM_JED_EXTENSIONS_INCLUDES"
                class="advancedSelect"
                size="1"
                default=""
                onchange="this.form.submit();"
        >
            <option value="">COM_JED_EXTENSIONS_INCLUDES_SELECT</option>
            <option value="com">COM_JED_EXTENSIONS_INCLUDES_COM</option>
            <option value="mod">COM_JED_EXTENSIONS_INCLUDES_MOD</option>
            <option value="plugin">COM_JED_EXTENSIONS_INCLUDES_PLUGIN</option>
        </field>

    </fields>

    <fields name="list">

        <field name="limit"
               type="limitbox"
               class="input-mini advancedSelect"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>
